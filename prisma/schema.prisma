generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  password      String?
  image         String?
  status        Status    @default(inactive)
  role          Role      @default(USER)
  uid           Int       @default(autoincrement())
  ordersUser  Order[]   @relation("userOrders")
  ordersAdmin Order[]   @relation("adminOrders")
  @@map("users")
}


enum Role {
  USER
  ADMIN
}

enum Status {
  inactive
  active
}

model verificationToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
}

enum StatusOrder {
  TODO   @map("Do zrobienia")
  INPROGRESS   @map("W toku")
  DONE   @map("Zrealizowany")
}
model Order {
  id            Int    @id @default(autoincrement())
  name          String?
  createdAt     DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  price         Float   
  user          User          @relation("userOrders", fields: [user_id], references: [id])
  user_id       String
  admin         User          @relation("adminOrders", fields: [admin_id], references: [id])
  admin_id      String
  status        StatusOrder @default(TODO)        
  @@map("orders")
}
